<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin_left"
    android:layout_marginRight="@dimen/card_margin_right"
    android:layout_marginBottom="@dimen/card_margin_bottom"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardBackgroundColor="@color/card_background"
    android:id="@+id/cart_product_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1.0">
        <LinearLayout
            android:id="@+id/upper"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.6"
            android:weightSum="1.0">
            <ImageView
                android:layout_weight="0.5"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_product_image_height"
                android:id="@+id/card_wish_image_product"
                android:scaleType="fitCenter"
                android:src="@drawable/sample_product"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <EditText
                        android:id="@+id/card_wish_text_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Product "
                        android:hint="Product Name" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <EditText
                        android:id="@+id/card_wish_text_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_text"
                        android:text="Price"
                        android:hint="Price" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.2"
            android:weightSum="1.0">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:weightSum="1.0">
            <Button
                android:id="@+id/button_card_wish_remove"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:elevation="2dp"
                android:text="Remove"
                android:textColor="@color/textColorWhite"
                android:background="@color/button_background"
                android:layout_weight="0.5"
                android:layout_marginRight="5dp"
                />
            <Button
                android:id="@+id/button_card_wish_order_now"
                android:background="@color/button_background"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:elevation="2dp"
                android:textColor="@color/textColorWhite"
                android:layout_weight="0.5"
                android:text="Order Now" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>