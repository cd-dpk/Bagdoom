<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_invoice_height"
    android:paddingBottom="2dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        card_view:cardCornerRadius="1dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:elevation="2dp"
        android:id="@+id/productcard"
        card_view:cardBackgroundColor="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:weightSum="3.0">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_invoice_element_height"
                android:text="INVOICE ID"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="1.0"
                android:id="@+id/text_card_invoice_invoice_id"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.0"
                android:weightSum="2.0">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_invoice_element_height"
                    android:text="TOTAL PRICE"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1.0"
                    android:id="@+id/text_card_invoice_total_price"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_invoice_element_height"
                    android:text="Invoice Time"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1.0"
                    android:id="@+id/text_card_invoice_invoice_time"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="@dimen/card_invoice_element_height"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Status"
                android:id="@+id/text_card_invoice_invoice_status"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>