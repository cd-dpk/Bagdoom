<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:coordinatorLayout=".activities.installation.PhoneVerificationStep1Activity"
    tools:showIn="@layout/activity_phone_verification_step1"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/send_verification_message_string"
            android:textColor="#000000"
            android:id="@+id/verify_text"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="9pt" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:id="@+id/first_line"
            android:background="#ADD8E6"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="20dp"
            android:text="Phone No."
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="9pt"
            android:id="@+id/text_view_phone"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countryCode"
                android:text="+88"
                android:editable="false"
                android:textColor="#000000"
                android:textSize="9pt"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Enter Number Here"
                android:ems="10"
                android:gravity="center"
                android:id="@+id/phone"
                android:textColor="#000000"
                android:maxLength="11"
                android:textSize="9pt"
                />
        </LinearLayout>
        <Button
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:elevation="2dp"
            android:id="@+id/send_verify_button"
            android:textSize="9pt"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="DONE"
            android:textColor="#FFFFFF"
            android:background="#FF0000"
            />
    </LinearLayout>
</LinearLayout>