<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/content_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:coordinatorLayout=".ProfileActivity"
    tools:showIn="@layout/activity_profile"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/full_page">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="@dimen/profile_image_width"
            android:layout_height="@dimen/profile_image_height"
            android:minHeight="150px"
            android:src="@drawable/image_demo_profile" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Click on Image to add Profile Image"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/button_submit"
            android:layout_alignStart="@+id/button_submit"
            android:visibility="invisible"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:id="@+id/second_line"
        android:background="#ADD8E6"
        android:layout_below="@+id/profile_image"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_name"
                android:scaleType="centerInside"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:textColor="#000000"
                    android:id="@+id/text_profile_name"
                    android:hint="Name"
                    android:editable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_phone"
                android:scaleType="centerInside"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:textColor="#000000"
                    android:id="@+id/text_profile_phone"
                    android:hint="Phone"
                    android:editable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_mail"
                android:scaleType="fitCenter"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/text_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:editable="false"
                    android:textColor="#000000" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_address"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/text_profile_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight=".5"
                    android:ems="10"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:textColor="#000000"
                    android:editable="false"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>