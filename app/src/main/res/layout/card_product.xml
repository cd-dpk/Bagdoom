<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        card_view:cardCornerRadius="1dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:elevation="2dp"
        android:id="@+id/productcard"
        card_view:cardBackgroundColor="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/product_photo_home"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:src="@drawable/sample_product"
                android:scaleType="fitCenter"
                />

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T-Shirt"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="9pt"
                android:id="@+id/product_text_home"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/product_photo_home"
                android:layout_toEndOf="@+id/product_photo_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="5pt"
                android:text="TK. 200"
                android:textColor="@color/black"
                android:id="@+id/price_text_home"
                android:layout_below="@+id/product_text_home"
                android:layout_toRightOf="@+id/product_photo_home"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/price_text_home"
                android:paddingTop="20dp"
                android:paddingLeft="100dp"
                android:weightSum="1.0"
                android:layout_toRightOf="@+id/product_photo_home"
                >
                <ImageButton
                    android:background="@color/trans"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/button_product_favourite"
                    android:src="@drawable/fav_1_24"
                    android:layout_weight="0.5"
                    />
                <ImageButton
                    android:background="@color/trans"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/button_product_cart"
                    android:src="@drawable/cart_1_24"
                    android:layout_weight="0.5"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>